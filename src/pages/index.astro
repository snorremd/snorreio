---
import { Image } from "astro:assets";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import profileImg from "../assets/images/profile.jpeg";

import BaseLayout from "../layouts/BaseLayout.astro";
import FrontPageFeatured from "../components/FrontPageFeatured.astro";
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION} >
  <div
    slot="top"
    class={`
  flex lg:flex-row flex-col
  w-full justify-between`}
  >
    <div class="flex flex-col items-center pb-8">
      <h1 class="hidden">Snorre.io</h1>
      <Image
        src={profileImg}
        loading="eager"
        alt="Profile Image of me, Snorre"
        widths={[400, 600, 800]}
        aspectRatio={1}
        sizes="(max-width: 800px) 100vw, 800px"
        class={`
        grayscale
        opacity-80
        rounded-md
        w-64
        h-64
        object-cover
        `}
      />
    </div>
    <div
      class={`
      w-full lg:w-1/2 text-center lg:text-start flex flex-col justify-center text-xl text-stone-900 dark:text-stone-50
      px-8 lg:px-0
    `}
    >
      <p class="pb-4">
        Welcome to <em class="font-shortstack">Snorre.io</em> - a personal website by
        Snorre Magnus Dav√∏en.
      </p>
      <p>
        I'm a software developer from Norway that focus on frontend and devops.
        On this website you can find my blog, projects and contact information.
        I write about web development, devops, and other things I find
        interesting.
      </p>
    </div>
  </div>
  <div
    slot="content"
    class="w-full max-w-6xl grid grid-flow-row lg:grid-flow-col auto-cols-fr gap-8 -mt-16"
  >
    <FrontPageFeatured
      title="Blog"
      description="I write about web development, devops, and other things I find interesting."
      href="/blog"
    />
    <FrontPageFeatured
      title="Projects"
      description="I have a few projects I'm working on. Some are open source and some are not."
      href="/projects"
    />
    <FrontPageFeatured
      title="Contact"
      description="Where you might locate me"
      href="/"
    />
    <FrontPageFeatured
      title="About"
      description="A short introduction to me, the author of Snorre.io."
      href="/about"
    />
  </div>
</BaseLayout>
