{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "files": {
    "includes": [
      "**",
      "!**/.astro/**/*",
      "!**/dist/**/*",
      "!**/.wrangler/**/*",
      "!**/src/**/*.astro"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  }
}
